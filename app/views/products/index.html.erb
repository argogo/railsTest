<link href="https://fonts.googleapis.com/css?family=Bungee+Shade|Caveat" rel="stylesheet">

<body id="products_back">
<p id="notice"><%= notice %></p>
<div class="products_header">
  <h1>Products</h1>
</div>

<div class="container-fluid product-container">
  <div class="row product-row">
    <!--appends item to /products-->
    <% @products.each do |product| %>
      <div class="col-sm-6 col-md-4 product-display">
        <%= image_tag(product.image_url, class: "img-responsive", style:"height:385px; width:350px;") %>
        <!-- image sizes kept uniform-->
        <h1 class="product-name"><strong><%= product.name %></strong></h1>
        <p><%= product.description %></p>
        <p>Colour: <%= product.colour %></p>
        <strong id="product-price">$ 65 </strong>
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div><!--/col-->
    <% end %>
  </div><!--row-->
</div><!--cont-fluid-->

<br>

<%= link_to 'New Product', new_product_path %>
</body>



